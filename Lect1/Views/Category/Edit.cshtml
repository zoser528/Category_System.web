@using Book.Models;
@model Categorey
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Edit Category</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" style="width: 150px" class="btn btn-primary">Update</button>
        <a asp-action="Index" style="width: 150px" class="btn btn-secondary">Back to List</a>

    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}